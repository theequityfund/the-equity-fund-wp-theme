{% if cta_items|length %}
<section
  class="palette-{{ palette|default('cream') }} bg-background text-foreground mx-breakout-site-paddding"
  {% if headline %}aria-label="{{ headline }}"{% endif %}
  data-block="cta"
>
  <div class="px-site-padding py-5 md:py-10 lg:py-15">

    {# HEADER #}
    <div class="border-b border-foreground pb-5 md:pb-6 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <div class="max-w-[50rem]">
        {% if headline %}
          <h2 class="text-h2 font-serif mb-2">
            {{ headline }}
          </h2>
        {% endif %}

        {% if introduction %}
          <p class="text-base md:text-2xl leading-[1.4]">
            {{ introduction }}
          </p>
        {% endif %}
      </div>

      {% if cta_link %}
        <a
          href="{{ cta_link.url }}"
          class="inline-block uppercase font-bold tracking-wide text-sm md:text-base px-1 -mx-1 hocus:bg-foreground hocus:text-background transition-colors whitespace-nowrap"
        >
          {{ cta_link.title }}
        </a>
      {% endif %}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-gutter pt-5 md:pt-8 lg:pt-10">
      {% for item in cta_items %}
        <article class="flex flex-col gap-3">

          {% if item.image %}
            <a href="{{ item.link }}" class="block">
              <figure class="w-full">
                {% include 'templates/components/lazy-img.twig' with {
                  class: 'w-full',
                  img: get_image(item.image),
                  aspectRatio: 'wide'
                } %}
              </figure>
            </a>
          {% endif %}

          <h3 class="font-display font-bold uppercase tracking-wide text-base md:text-lg">
            <a href="{{ item.link }}" class="hocus:underline">
              {{ item.title }}
            </a>
          </h3>

          {% if item.description %}
            <p class="text-sm md:text-base leading-[1.4]">
              {{ item.description }}
            </p>
          {% endif %}

        </article>
      {% endfor %}
    </div>

  </div>
</section>
{% endif %}