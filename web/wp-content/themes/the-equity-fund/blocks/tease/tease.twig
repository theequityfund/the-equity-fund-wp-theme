<section
  class="palette-{{ palette|default('maroon') }} size-{{ size|default('large') }} bg-background text-foreground mx-breakout-site-paddding"
  data-block="tease"
  {% if overline %}aria-label="{{ overline }}"{% endif %}
>
  <div class="px-site-padding py-10 lg:p-site-padding grid grid-cols-1 lg:items-center lg:grid-cols-2 gap-gutter">
    <div class="flex flex-col gap-4 lg:gap-6 items-center text-center {{ layout == 'image-left' ? 'order-1' : 'max-lg:order-1' }}">
      {% if overline %}
        <p class="uppercase font-bold max-lg:text-sm tracking-wide">{{ overline }}</p>
      {% endif %}

      <h2 class="font-display uppercase font-medium text-center {{ size == 'large' ? 'text-giant leading-[0.9]' : 'text-[2rem] md:text-[2.5rem] lg:text-[3.75rem] leading-[1.2]' }} max-w-[80%]">{{ headline }}</h2>

      {% if description %}
        <p class="rich-text text-base md:text-[1.15rem] lg:text-[1.25rem] leading-[1.35] tracking-[-0.03em] font-serif font-normal max-w-[80%] md:max-w-[50%]">{{ description|striptags('<em><strong><a>')|raw }}</p>
      {% endif %}

      {% if cta %}
        <a
          class="uppercase leading-[1] text-sm lg:text-base font-bold tracking-wide px-4 pb-2 pt-3 text-button-foreground bg-button-background hocus:bg-button-hover-background hocus:text-button-hover-foreground transition-all"
          href="{{ cta.url }}"
        >
          {{ cta.title }}
        </a>
      {% endif %}
    </div>

    <div class="p-5">
      {% if image %}
        {% include 'templates/components/lazy-img.twig' with {
          img: image,
          aspectRatio: image_crop|default('wide')
        } %}
      {% endif %}
    </div>
  </div>
</section>
