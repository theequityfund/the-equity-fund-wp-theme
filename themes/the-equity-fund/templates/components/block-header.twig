  <h2 class="font-display font-medium text-h3 uppercase">{{ title }}</h2>

  {% if link %}
    <a class="text-sm font-sans-narrow md:text-base font-medium whitespace-nowrap px-1 -mx-1 hocus:bg-foreground hocus:text-background transition-colors" href="{{ link.url }}">{{ link.title }}</a>
  {% endif %}
</div>
