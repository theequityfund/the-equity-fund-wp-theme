<header class="palette-maroon text-foreground bg-background grid md:grid-cols-2 md:items-center auto-rows-auto gap-gutter pt-topper-margin px-site-padding pb-site-padding">
  <div class="flex flex-col items-center justify-center gap-6 md:gap-8 max-w-2xl mx-auto">
    <span class="uppercase font-bold max-md:text-sm tracking-wide">{{ overline }}</span>
    <h1 class="font-display uppercase text-giant text-center">{{ title }}</h1>

    {% if description %}
      <p class="text-center {% if state %}mt-8{% endif %}">{{ description }}</p>
    {% endif %}
  </div>

  {% if image %}
    {% include 'templates/components/lazy-img.twig' with {
      class: 'w-full',
      img: image,
    } %}
  {% endif %}
</header>
