<header class="palette-maroon text-foreground bg-background md:items-center auto-rows-auto gap-gutter pt-topper-margin px-site-padding pb-site-padding {{ image == true ? 'grid md:grid-cols-2' : 'md:pt-topper-margin-lg pb-10 md:pb-16' }}">
  <div class="flex flex-col items-center justify-center gap-6 md:gap-8 max-w-2xl mx-auto">
    <span class="uppercase font-bold max-md:text-sm tracking-wide">{{ overline }}</span>
    <h1 class="font-display font-medium uppercase text-giant text-center">{{ title }}</h1>

    {% if state %}
    <svg class="text-cream h-48" aria-hidden="true">
      <use xlink:href="#state-{{ state }}"></use>
    </svg>
    {% endif %}

    {% if description %}
      <p class="rich-text text-center {% if state %}mt-8{% endif %}">{{ description }}</p>
    {% endif %}
  </div>

  {% if image %}
    {% include 'templates/components/figure.twig' with {
      class: 'w-full',
      img: image,
    } %}
  {% endif %}
</header>
