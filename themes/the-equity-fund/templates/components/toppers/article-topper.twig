{% set palette = palette|default('cream') %}

<header class="palette-{{ palette }} bg-background px-site-padding pb-24 pt-topper-margin">
  <div class="flex flex-col items-center gap-12 max-w-6xl mx-auto">
    {% if image %}
      {% include 'templates/components/lazy-img.twig' with {
        class: 'w-full',
        img: image,
      } %}
    {% endif %}

    <h1 class="font-serif text-foreground text-h2 text-center">{{ title }}</h1>

    {% if tag or bylines|length %}
    <div class="text-foreground flex items-center max-md:flex-col md:gap-6">
      {% if tag %}
      <a class="font-bold" href="{{ tag.link }}">{{ tag.title }}</a>
      {% endif %}

      {% if tag and bylines|length %}
      <span aria-hidden="true">â¸º</span>
      {% endif %}

      {% if bylines|length %}
      <p>By {% for byline in bylines %}{{ byline }}{% if loop.index < loop.length - 1 %}, {% endif %}{% if loop.index == loop.length - 1 %} and {% endif %}{% endfor %}</p>
      {% endif %}
    </div>
    {% endif %}
  </div>
</header>
