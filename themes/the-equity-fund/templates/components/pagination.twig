{% if pagination.pages %}
<nav
  class="px-site-padding"
  aria-label="Pagination"
  hx-target="#article-index"
  hx-select="#article-index"
  hx-swap="outerHTML"
  hx-replace-url="true"
>
  {% set prev = pagination.prev %}
  {% set next = pagination.next %}

  <button
    hx-get="{{ prev.link }}"
    hx-trigger="click"
    aria-label="Previous Page"
    {% if not prev %}disabled{% endif %}
  >
    ←
  </button>

  <ol>
    {% for page in pagination.pages %}
    <li>
      <button
        class="pagination__link"
        hx-get="{{ page.link }}"
        hx-trigger="click"
        aria-label="{{ 'Page ' ~ page.title }}"
        {% if page.current %}
        aria-current="page"
        disabled
        {% endif %}
      >
        {{ page.title }}
      </button>
    </li>
    {% endfor %}
  </ol>

  <button
    hx-get="{{ next.link }}"
    hx-trigger="click"
    aria-label="Next Page"
    {% if not next %}disabled{% endif %}
  >
    →
  </button>
</nav>
{% endif %}
