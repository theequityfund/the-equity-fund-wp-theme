{% extends "layouts/base.twig" %}

{% set palette = 'maroon' %}

{% block pageBody %}
  <header class="palette-maroon text-foreground bg-background grid md:grid-cols-2 md:items-center auto-rows-auto gap-gutter pt-topper-margin px-site-padding pb-site-padding">
    <div class="flex flex-col items-center justify-center gap-8 max-w-2xl mx-auto">
      <span class="uppercase font-bold">State-based grantees</span>
      <h1 class="font-display uppercase text-giant text-center">{{ post.meta('headline') }}</h1>

      {% if post.handle %}
      <svg class="text-cream h-48" aria-hidden="true">
        <use xlink:href="#state-{{ post.handle }}"></use>
      </svg>
      {% endif %}

      {% if post.meta('introduction') %}
        <p class="text-center mt-12"><span class="font-bold">{{ post.title }}</span> â€” {{ post.meta('introduction')|striptags('<em><strong><a>')|raw }}</p>
      {% endif %}
    </div>

    {% if post.thumbnail %}
      {% include 'templates/components/lazy-img.twig' with {
        class: 'w-full',
        img: post.thumbnail,
      } %}
    {% endif %}
  </header>

  <article class="gutenberg rich-text mt-16">
    {{ post.content }}
  </article>
{% endblock %}
