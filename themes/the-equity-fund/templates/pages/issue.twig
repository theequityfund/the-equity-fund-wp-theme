{% extends "layouts/base.twig" %}

{% set palette = 'maroon' %}

{% block pageBody %}
  {% include 'templates/components/toppers/split-topper.twig' with {
    overline: 'Issues',
    title: issue.title,
    image: issue.thumbnail,
    description: issue.meta('introduction')|striptags('<em><strong><a>')|raw,
  } %}

  <article class="gutenberg rich-text">
    {{ issue.content }}

    {% if issue.grantees|length %}
      {% include 'blocks/grantees/grantees.twig' with {
        grantees: issue.grantees,
      } %}
    {% endif %}
  </article>
{% endblock %}
