{% extends "layouts/base.twig" %}

{% set palette = 'yellow' %}

{% block pageBody %}
  {% set solution = post.terms('solution')|first %}
  {% set bylines = post.bylines %}

  {% include 'templates/components/toppers/article.twig' with {
    title: post.title,
    thumbnail: post.thumbnail,
    bylines: bylines,
    tag: solution,
    palette: palette,
  } %}

  <article class="gutenberg rich-text mt-16">
    {{ post.content }}
  </article>
{% endblock %}
