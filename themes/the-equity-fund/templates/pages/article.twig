{% extends "layouts/base.twig" %}

{% set palette = 'yellow' %}

{% block pageBody %}
  {% set issue = post.issue %}
  {% set bylines = post.bylines %}

  {% include 'templates/components/toppers/article-topper.twig' with {
    title: post.title,
    image: post.thumbnail,
    bylines: bylines,
    tag: issue,
    palette: palette,
  } %}

  <article class="gutenberg rich-text my-10 md:my-16">
    {{ post.content }}
  </article>
{% endblock %}
