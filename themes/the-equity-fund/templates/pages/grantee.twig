{% extends "layouts/base.twig" %}

{% set palette = 'maroon' %}

{% block pageBody %}
  {% set state = post.states|first %}

  {% include 'templates/components/toppers/article-topper.twig' with {
    title: post.title,
    thumbnail: post.thumbnail,
    tag: state,
    palette: 'maroon',
  } %}

  <article class="gutenberg rich-text mt-16">
    {{ post.content }}
  </article>
{% endblock %}
