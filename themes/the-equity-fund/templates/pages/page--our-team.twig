{% extends "layouts/base.twig" %}

{% set palette = 'lavender' %}

{% block pageBody %}
  {% include 'templates/components/toppers/our-team-topper.twig' with {
    overline: post.title,
    title: post.meta('headline'),
    description: post.meta('introduction')|striptags('<em><strong><a>')|raw,
    cta: post.meta('cta'),
    image: post.thumbnail
  } %}

  <article class="gutenberg rich-text">
    {{ post.content }}
  </article>
{% endblock %}
