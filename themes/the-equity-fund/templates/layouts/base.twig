<!DOCTYPE html>
<html class="no-js" lang="en-us">

{% include "layouts/includes/head.twig" %}

<body class="{{ body_class }}{% if pagename %} page-name-{{ pagename }}{% endif %} {% block custom_body_classes %}{% endblock %}">

  <a
    class="[&:not(:focus)]:sr-only absolute top-4 left-4 bg-cream px-4 py-3 flex justify-center"
    href="#content"
    tabindex="0"
  >
    <span class="text-maroon text-md text-center">Skip to content</span>
  </a>


  {% include "layouts/includes/svgs.twig" %}
  {% include "layouts/includes/grid.twig" %}

  <div class="layout--base">

    {# {% include "components/nav.twig" %} #}
    {# {% include "components/menu.twig" %} #}

    <main id="content" class="content {% block custom_content_classes %}{% endblock %}" tabindex="-1">
      {% block pageBody %}
      {% endblock %}
    </main>

    {% block footer %}
      {% include "components/footer.twig" %}
    {% endblock %}

  </div>

  {{ function('wp_footer') }}

  {% block scripts %}
  {% endblock %}

</body>

</html>
