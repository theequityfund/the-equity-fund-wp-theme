{% if groups|length %}
<div class="palette-cream text-foreground" data-block="checklist">
  {% for group in groups %}
    {% if group.checklist|length %}
      <section {% if group.headline %}aria-label="{{ group.headline }}"{% endif %}>
        <h2>{{ group.headline }}</h2>

        <ul>
          {% for item in group.checklist %}
            <li>{{ item.text }}</li>
          {% endfor %}
        </ul>
      </section>
    {% endif %}
  {% endfor %}
</div>
{% endif %}
