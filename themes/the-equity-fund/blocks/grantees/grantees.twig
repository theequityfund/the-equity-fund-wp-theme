{% if grantees|length %}
<section
  class="palette-cream text-foreground flex flex-col gap-gutter"
  data-block="grantees"
  {% if headline %}aria-label="{{ headline }}"{% endif %}
>
  {% if headline %}
    {% include 'templates/components/block-header.twig' with {
      title: headline,
    } %}
  {% endif %}

  <ul class="grid grid-cols-3 gap-gutter">
    {% for grantee in grantees %}
      {% set headingTag = headline ? 'h3' : 'h2' %}
      {% set issue = grantee.issue() %}
      {% set external_link = grantee.meta('external_link') %}

      <li>
        {% if grantee.thumbnail %}
          {% include 'templates/components/lazy-img.twig' with {
            class: 'w-full',
            img: Image(grantee.thumbnail),
          } %}
        {% endif%}

        <{{ headingTag }}>
          <a href="{{ external_link|default(grantee.link) }}" {% if external_link %} target="_blank" rel="noopener noreferrer"{% endif %}>
            {{ grantee.title }}
          </a>
        </{{ headingTag }}>

        {% if grantee.excerpt %}
          <p>{{ grantee.excerpt.read_more('') }}</p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</section>
{% endif %}
