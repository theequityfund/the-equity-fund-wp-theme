{% if issues|length %}
<section
  class="palette-cream text-foreground"
  data-block="issues"
  aria-label="{{ headline }}"
>
  {% include 'templates/components/block-header.twig' with {
    title: headline,
  } %}

  <ul>
    {% for issue in issues %}
    <li>
      <h3>
        <a href="{{ issue.link }}">{{ issue.title }}</a>
      </h3>
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %}
