{% if issues|length %}
<section
  class="palette-cream text-foreground"
  data-block="issues"
  aria-label="{{ headline }}"
>
  {% include 'templates/components/block-header.twig' with {
    title: headline,
  } %}

  <ul>
    {% for issue in issues %}
      {% set grantee_count = issue.count_grantees() %}

      <li>
        <h3>
          <a href="{{ issue.link }}">{{ issue.title }}</a>
        </h3>

        {% if grantee_count %}
          <p>{{ grantee_count }} {{ grantee_count == 1 ? 'grantee' : 'grantees' }}</p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</section>
{% endif %}
