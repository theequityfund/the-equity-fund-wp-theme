{% if statistics|length %}
{% set count = statistics|length %}
<section
  class="palette-{{ palette|default('cream') }} size-{{ size|default('large') }} bg-background text-foreground mx-breakout-site-paddding"
  {% if headline %}aria-label="{{ headline }}"{% endif %}
  data-block="statistics"
>
  <div class="px-site-padding py-8 md:py-14 lg:py-20 {{ count == 2 ? 'grid grid-cols-1 lg:grid-cols-12 lg:grid-gutter' }}">
    <div class="flex max-sm:flex-col gap-4 border-b border-foreground sm:justify-between sm:items-end {{ count == 2 ? 'lg:flex-col lg:col-span-5 lg:border-0 lg:justify-normal lg:items-start' }} {{ size == 'large' ? 'pb-5 lg:pb-6' : 'pb-4' }}">
      {% if headline %}
        <h2 class="{{ size == 'large' ? 'text-h2 font-serif' }} {{ size == 'large' and count >= 3 ? 'max-w-[50rem]' }} {{ size == 'small' and count >= 3 ? 'uppercase font-bold max-md:text-sm tracking-wide max-w-96 leading-[1.2]' }}">{{ headline }}</h2>
      {% endif %}

      {% if cta %}
        <a class="inline-block whitespace-nowrap leading-[1] hocus:underline {{ count == 2 ? 'lg:self-start lg:uppercase lg:leading-[1] lg:text-base lg:font-bold lg:tracking-wide lg:px-4 lg:py-3 lg:text-button-foreground lg:bg-button-background hocus:lg:bg-button-foreground hocus:text-button-background transition-all hocus:lg:no-underline' }}" href="{{ cta.url }}">{{ cta.title }}</a>
      {% endif %}
    </div>

    <dl class="grid max-md:grid-cols-1 gap-5 md:gap-gutter pt-8 lg:pt-10 {{ count == 2 ? 'md:grid-cols-2 lg:col-span-6 lg:col-end-13' }} {{ count == 4 ? 'md:grid-cols-2 lg:grid-cols-4' }} {{ count == 3 ? 'md:grid-cols-3' }}">
      {% for item in statistics %}
        <div class="border-dotted border-foreground max-md:grid max-md:grid-cols-2 max-md:gap-gutter max-md:last:border-0 max-md:last:pb-0 max-md:border-b max-md:pb-4 {{ count <= 3 ? 'md:border-l md:pl-4 first:md:pl-0 first:md:border-0 ' }} {{ count == 4 ? 'lg:pl-4 lg:border-l first:md:border-b first:md:pb-6 first:lg:border-0 first:pl-0 [&:nth-child(2)]:md:pb-6 [&:nth-child(2)]:md:border-b [&:nth-child(2)]:lg:border-b-0 [&:nth-child(2)]:lg:pb-0' }}">
          <dt class="flex flex-row justify-start">
            <span class="font-display font-normal text-big-number">{{ item.figure }}</span>

            {% if item.unit %}
              <sup class="font-display font-normal top-[-0.5rem] text-5xl md:text-8xl pl-2">{{ item.unit }}</sup>
            {% endif %}
          </dt>

          <dd class="rich-text text-base leading-[1.2] lg:text-lg lg:leading-[1.2]">
            {{ item.description|striptags('<em><strong><a>')|raw }}
          </dd>
        </div>
      {% endfor %}
    </dl>
  </div>
</section>
{% endif %}
